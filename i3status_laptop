# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#800080"
        color_degraded = "#800080"
}

order += "disk /"
order += "wireless _first_"
order += "battery 0"
order += "battery 1"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery 0 {
        format = "ðŸ”‹I: %percentage"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}


battery 1 {
        format = "ðŸ”‹E: %percentage"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}


battery all {
        format = "%statusAGG: %percentage"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

disk "/" {
        format = "Disk: %avail"
}
